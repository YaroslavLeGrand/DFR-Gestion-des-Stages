{% extends 'base.html.twig' %}

{% block title %}Preferer index{% endblock %}

{% block body %}
    <h1>Preferer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for preferer in preferers %}
            <tr>
                <td>{{ preferer.id }}</td>
                <td>
                    <a href="{{ path('app_preferer_show', {'id': preferer.id}) }}">show</a>
                    <a href="{{ path('app_preferer_edit', {'id': preferer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_preferer_new') }}">Create new</a>
{% endblock %}
